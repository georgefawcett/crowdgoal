<div class="col s12 m7">
  <div class="card horizontal" style="border: 1px solid #e3f2fd; margin:0;">
    <div class="card-stacked">
      <div class="card-content small" style="padding-top: 8px; padding-bottom: 0;">
        <table>
          <tr>
            <td width="29%" valign="top" style="padding-right: 15px; vertical-align: top">
            <ul><li class="dropdown-button" data-activates="dp-dropdown">
              <%= link_to image_tag(@user.picture.url(:profile), class: 'circle profilepic') %>

            </li></ul>

            </td>
            <td valign="top">
              <div style="float: right">
                <a href="/users/<%=@user.id%>">
                  <button id="edituser-close-button" class="btn-flat grey-text" style="position:absolute;top:0;right:1em;padding:0;"><i class="material-icons small">close</i></button>
                </a>
              </div>

              <div class="row">
                <div class="input-field col s8">
<span style="padding-left: 8px; font-weight: bold">Profile Settings:</span>
<br>

<button id="change-info-button" class="btn transparent black-text no-uppercase" style="margin:10px;">Update Personal Info</button>

  <div id="change-info-form" class="hide">

   <div class="row">
                <div class="input-field col s8">
                  <input value="<%=@user.name%>" id="edit-name" type="text" class="validate">
                  <label class="active" for="Name">Full Name</label>
                </div>
              </div>


              <div class="row">
                <div class="input-field col s8">
                  <input id="edit-description" type="text" class="active" value="<%=@user.about%>">
                  <label class="active" for="About You">About You</label>
                </div>
              </div>



              <div class="row">
                <div class="input-field col s8">
                  <button id="update-user-info-button" data-user-id="<%=current_user.id%>" class="btn green no-uppercase right-align"> Update Info</button>
                </div>
              </div>
              <br>
            </div>







<button id="change-picture-button" class="btn transparent black-text no-uppercase" style="margin:10px;">Update Profile Picture</button>

  <div id="change-picture-form" class="hide">
    <div class="row">

<%= form_for @user, :method => :PATCH, :html => { :multipart => true } do |form| %>
  <%= form.hidden_field :name, value: @user.name %>
  <%= form.hidden_field :about, value: @user.about %>
  <%= form.file_field :picture, style: 'border: 1px solid black; border-radius: 4px; padding: 8px; margin-bottom: 5px' %>
  <%= form.submit "Upload", class: "btn green no-uppercase" %>
<% end %>

    </div>
  </div>

<button id="change-password-button" class="btn transparent black-text no-uppercase header" style="margin:10px;">Update Password</button>

<div id="" class="hide">
                <div class="row">
                  <div class="input-field col s8">
                    <input id="old-password" type="password" class="validate active">
                    <label class="active" for="password">Old Password</label>
                  </div>
                </div>

                <div class="row">
                  <div class="input-field col s8">
                    <input id="new-password" type="password" class="validate active">
                    <label class="active" for="new password">New Password</label>
                  </div>
                </div>

                <div class="row">
                  <div class="input-field col s8">
                    <input id="confirm-password" type="password" class="validate active">
                    <label class="active" for="confirm password">Confirm Password</label>
                  </div>
                </div>
                <div class="row">
                  <div class="input-field col s8">
                    <button id="save-password-button" class="btn green no-uppercase right-align"> Save Password</button>
                  </div>
                </div>
              </div>








              <br>

            </td>
          </tr>
        </table>
      </div>
    </div>
  </div>
</div>
 <ul class="collapsible" data-collapsible="accordion">
    <li>
      <div class="collapsible-header"><i class="material-icons">face</i>Update Personal Info</div>
      <div class="collapsible-body"><span>Lorem ipsum dolor sit amet.</span></div>
    </li>
    <li>
      <div class="collapsible-header"><i class="material-icons">photo_camera</i>Update Profile Picture</div>
      <div class="collapsible-body"><span>Lorem ipsum dolor sit amet.</span></div>
    </li>
    <li>
      <div class="collapsible-header" id="change-password-button"><i class="material-icons">lock_outline</i>Update Password</div>
      <div class="collapsible-body" id="change-password-form"><span>Lorem ipsum dolor sit amet.</span></div>
    </li>
  </ul>

<%= render 'edit_form' %>
