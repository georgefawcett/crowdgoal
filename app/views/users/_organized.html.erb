<ul class="collection">


  <% @created.each do |event| %>



    <li class="collection-item avatar">

      <img src="https://s3.ca-central-1.amazonaws.com/crowdgoal/static/icons/<%= event.sport.icon %>.ico" class="circle sportsicon">

    <p>
      <a href="/events/<%= event.id %>"><%= event.title %></a>
    </p>
    <p>
      <font class="messagedate">
        Played <%= event.created_at.strftime("%B %-d, %Y") %> at <%= event.location %>
      </font>
    </p>

     </li>

  <% end %>


</ul>