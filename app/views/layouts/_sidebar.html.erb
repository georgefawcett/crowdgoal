<div class="sideNav">



  <% if current_user %>

      <ul class="collapsible" data-collapsible="expandable">
    <li>
      <div class="collapsible-header active green white-text"><i class="material-icons">timer</i>My Games</div>
      <div class="collapsible-body white" style="opacity: 0.5">

        <ul class="collection">

        <%
        game_sql = "select events.id, events.start_date, events.start_time, events.title, events.min_people, events.user_id, count(distinct events_users.user_id)
from (events_users
inner join events ON events.id = events_users.event_id)
where
events_users.user_id = #{current_user.id} and events.start_date >= CURRENT_DATE
group by events.id
order by events.start_date, events.start_time
limit 4"
        games = ActiveRecord::Base.connection.execute(game_sql)
%>
        <% games.take(3).each do |game| %>
 <% start_date = game['start_date'].to_datetime %>
          <li class="collection-item game-alert">
          <div>

            <div class="icon_date">

              <span class="icon_month"><%= start_date.strftime("%b") %></span>
              <h1 class="icon_day"><%= start_date.strftime("%-d") %></h1>
            </div>

          <div class="game_alert_div">

            <a href="/events/<%= game['id'] %>"><%= game['title'] %></a>

            <font class="game_alert_font">
            <br>
            <%= game['count'] %> / <%= game['min_people'] %> players
            <% if game['user_id'] == current_user.id %>
              &nbsp;&nbsp;&nbsp;<font style="background-color: green; color: white">&nbsp;organizer&nbsp;</font>
            <% end %>
            </font>
              <div class="progress grey lighten-4" style="height: 8px; border-radius: 4px; border: 1px solid #ccc; margin-top: 0; width: 72%">
                  <% if (game['count'] < game['min_people']) %>
                    <div id = "progress_bar_<%= game['id'] %>-side" class="determinate blue darken-1"></div>
                  <% elsif (game['count'] >= game['max_people']) %>
                    <div id = "progress_bar_<%= game['id'] %>-side" class="determinate red darken-1"></div>
                  <% else %>
                    <div id = "progress_bar_<%= game['id'] %>-side" class="determinate green darken-1"></div>
                  <% end %>
                   <% width = ((game['count'].to_f/game['min_people'].to_f)*100).to_s + "%" %>
                     <script type="text/javascript">
                    $("#progress_bar_<%= game['id'] %>-side").css("width"," <%= width %> ");
                  </script>

                </div>

              </div>




</div>
          </li>

        <%  puts game %>


        <% end %>



        </ul>

      </div>
    </li>
    <li>
      <div class="collapsible-header active red-text text-darken-2"><i class="material-icons">notifications_active</i>Alerts</div>
      <div class="collapsible-body white" style="opacity: 0.5">
         <ul class="collection">
<%
sql = "Select messages.created_at as \"posted\",
events.id as \"event_id\", events.title, users.name, messages.message, Null as \"photocount\", 0 as \"user_id\"

FROM (((events_users
inner join events ON events_users.event_id = events.id)
inner join messages ON events_users.event_id = messages.event_id)
inner join users ON messages.user_id = users.id)
where events_users.user_id = #{current_user.id}
and messages.user_id != #{current_user.id}

UNION

Select galleries.created_at as \"posted\",
events.id as \"event_id\", events.title, users.name, Null as \"messages.message\", count(distinct photos.id) as \"photocount\", 0 as \"user_id\"

FROM ((((events_users
inner join events ON events_users.event_id = events.id)
inner join galleries ON events_users.event_id = galleries.event_id)
inner join photos ON galleries.id = photos.gallery_id)
inner join users ON galleries.user_id = users.id)
where events_users.user_id = #{current_user.id}
and galleries.user_id != #{current_user.id}
group by events.id, users.name, galleries.created_at

UNION

Select events.created_at as \"posted\",
events.id as \"event_id\", events.title, users.name, Null as \"messages.message\", Null as \"photocount\", users.id as \"user_id\"
FROM ((relationships
inner join events ON events.user_id = relationships.followed_id)
inner join users ON events.user_id = users.id)
where relationships.follower_id = #{current_user.id}


order by posted desc
limit 5"
alerts = ActiveRecord::Base.connection.execute(sql)
%>




<% alerts.each do |alert| %>
  <li class="collection-item side-alert">

    <% if alert['message'] %>
      <%= alert['name'] %> posted a new message in <a href="/events/<%= alert['event_id'] %>#messages"><%= alert['title'] %></a>.
    <% elsif alert['user_id'] > 0 %>
       <a href="/users/<%= alert['user_id'] %>"><%= alert['name'] %></a> created a new event: <a href="/events/<%= alert['event_id'] %>"><%= alert['title'] %></a>.
    <% elsif alert['photocount'] %>
      <%= alert['name'] %> posted <%= pluralize(alert['photocount'], 'new photo', 'new photos') %> in <a href="/events/<%= alert['event_id'] %>#photos"><%= alert['title'] %></a>.
    <% end %>
<% puts alert %>


</li>
<% end %>

</ul>






      </div>
    </li>

  </ul>


<% end %> <!-- end if logged in -->
  </div> <!-- end sidebar -->