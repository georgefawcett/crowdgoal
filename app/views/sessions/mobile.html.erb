 <div class="container">
 <ul class="collapsible" data-collapsible="expandable">
    <li>
      <div class="collapsible-header active green white-text" style="font-size: 26px;font-weight: 300;"><i class="material-icons">person</i>Login</div>
      <div class="collapsible-body">

        <ul class="collection">
        <li class="collection-item game-alert" style="background: rgba(255, 255, 255, 0.7)">

 <%= form_for @user, url: '/login', :method => :POST do |form| %>
          <%= hidden_field_tag "source", value: "mobile" %>
      <% if flash.now[:alert] %>
        <ul class="error-message center-align">
          <% flash.now[:alert].each do |error| %>
            <li><%= error %></li>
          <% end %>
        </ul>
      <% end %>

      <div class="row">
        <div class="input-field col s12">
          <%= form.email_field :email, class: 'validate form-field' , placeholder: ' Email'%>
        </div>
      </div>
      <div class="row">
        <div class="input-field col s12">
          <%= form.password_field :password, class: 'validate form-field', placeholder: ' Password' %>
        </div>
      </div>
      <center>
      <br>
        <%= form.submit 'Login', class: 'btn btn-medium center-align waves-effect waves-light green  no-uppercase' %>
      </center>
    <% end %>
    <br>
    <section class="divider"></section>
    <br>
    <div class="center-align">
    <p>
    No account? <a href="/register">Register</a> or
    </p>
      <%= link_to user_facebook_omniauth_authorize_path, class: 'btn btn-medium center-align waves-effect waves-light no-uppercase', style: "background-color: #3b5998" do %> <i class="fa fa-facebook" aria-hidden="true"></i> &nbsp; Login with facebook <% end %><br><br>


</li>
        </ul>

        </div>

        </div>